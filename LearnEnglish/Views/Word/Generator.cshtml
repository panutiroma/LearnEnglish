
@{
    ViewBag.Title = "Generator";
}

<h2>Add new word</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="panel-body">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.LabelFor(model => model, "Word", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("word", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Generate" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
